{
  "name": "<%= inputs.packageName %>",
  "version": "0.0.1",
  "description": "<%= inputs.pluginName %>",
  "main": "lib/plugin.js",
  "dependencies": {
    "megadraft": "^0.4.37",
    "react": "16.4.1",
    "react-dom": "16.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.6.0",
    "babel-eslint": "^6.0.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "es6-shim": "^0.35.0",
    "eslint": "^2.4.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^4.2.3",
    "eslint-watch": "^2.1.11",
    "estraverse-fb": "^1.3.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-sass": "^4.0.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jsdom": "^8.3.1",
    "rimraf": "^2.5.2",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.6",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  },
  "peerDependencies": {},
  "scripts": {
    "start": "gulp dev-server",
    "test": "jest --env=jsdom",
    "test:watch": "jest --watchAll --env=jsdom",
    "build:css": "gulp sass",
    "build:lib": "babel src/ -d lib/",
    "build:dist": "rimraf dist && webpack --config webpack.config.dist.js --optimize-minimize",
    "build": "npm run build:lib && npm run build:dist && npm run build:css",
    "coverage": "jest --env=jsdom --coverage --no-cache",
    "prepublish": "npm run build",
    "lint": "eslint src tests",
    "lint:watch": "esw -w src tests",
    "watch": "babel -d lib/ src/ --watch",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**/*.js",
      "**/lib/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "<%= inputs.repositoryURL %>"
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "megadraft",
    "editor",
    "react",
    "draftjs"
  ],
  "author": {
    "author": "<%= inputs.authorName %>",
    "email": "<%= inputs.authorEmail %>",
    "url": "<%= inputs.authorEmail || inputs.homepage %>"
  },
  "license": "MIT",
  "bugs": {
    "url": "<%= inputs.issuesURL %>"
  },
  "homepage": "<%= inputs.homepage %>",
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "**/tests/**/*_test.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/helpers/setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](dist|lib|node_modules)[/\\\\]"
    ]
  }
}
